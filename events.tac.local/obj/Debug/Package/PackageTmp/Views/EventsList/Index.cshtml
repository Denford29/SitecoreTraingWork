@using events.tac.local.Models;
@using TAC.Utils.Helpers;
@model events.tac.local.Models.EventsList

@if (Model != null && Model.Events != null)
{
    <!-- [Event List] -->
    <div class="content-list newslist">
        <ol class="media-list">
            @foreach (var eventResult in Model.Events)
            {
                var eventDate = "";
                if(eventResult.Date != DateTime.MinValue)
                {
                    eventDate = eventResult.Date.ToShortDateString();
                }
                <li class="media media-align-middle">
                    <div class="media-left">
                        <a href="@eventResult.urllink">
                        @eventResult.EventImage
                        </a>
                    </div>
                    <div class="media-body">
                        <h3 class="media-heading">
                            <a href="@eventResult.ItemUrl">
                            @eventResult.ContentHeading
                            </a>
                        </h3>
                        <div class="description">
                            <p>
                                @eventResult.ContentIntro
                            </p>
                        </div>
                    </div>
                    @if (!string.IsNullOrWhiteSpace(eventDate))
                    {
                        <div class="metadata well">
                            @eventDate
                        </div>
                    }
                    
                    <hr />
                </li>
            }
            
        </ol>
        @Html.Pager(Model.PageSize, Model.TotalResultCount)

    </div>
    <!-- [Event List] -->
}

