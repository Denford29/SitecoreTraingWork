@using Sitecore.Mvc.Extensions
@using Sitecore.Mvc.Presentation
@model IEnumerable<SATC.SC.Framework.Navigation.Models.NavigationItemModel>

<!-- [Related Events] -->
@using (Html.EditFrame(RenderingContext.Current.ContextItem.Paths.FullPath, "Related Events", null, null, null, null))
{
    if (Model != null)
    {
        <div class="bg-primary side-widget">
            <h4 class="text-uppercase">Other events you will like</h4>
            <div class="sidebar">
                <ul class="nav nav-pills nav-stacked">
                    @foreach (var navItem in Model)
                    {
                        <li>
                            <a href="@navItem.Url" title="@navItem.Title">
                                @navItem.Title
                            </a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    }
}

<!-- [/Related Events] -->