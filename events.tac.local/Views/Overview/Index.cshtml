@model events.tac.local.Models.OverviewList

<!-- [Category List] -->

@if (Model != null)
{
    <ul class="block-grid-md-4 block-grid-sm-3 block-grid-xs-1">
        @foreach (var item in Model)
        {
            <li>
                <div class="thumbnail">
                    <a href="@item.Url">
                        @item.Image
                    </a>
                    <div class="caption">
                        <h3>
                            @item.Title
                        </h3>
                        <a href="@item.Url" class="btn btn-default">
                            @Model.ReadMore
                        </a>
                    </div>
                </div>
            </li>
        }
    </ul>
}

<!-- [Category List] -->