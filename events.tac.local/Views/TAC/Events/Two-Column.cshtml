@using Sitecore.Data.Fields
@using Sitecore.Mvc
@using Sitecore.Mvc.Presentation
@using Sitecore.Resources.Media
@model RenderingModel
@{
    var backgroundImage = "/Images/climbing-events.jpg";
    var currentItem = RenderingContext.Current.ContextItem;
    ImageField bannerImageField = currentItem.Fields["DecorationBanner"];
    if (bannerImageField != null && bannerImageField.MediaItem != null)
    {
        var options = new MediaUrlOptions { Height =850 , Width = 565 };
        backgroundImage = MediaManager.GetMediaUrl(bannerImageField.MediaItem, options);
    }
}

<main>
    <header class="page-header bg-media bg-parallax" style="background-image: url(@backgroundImage)">
        <div class="container">
            <!-- [Breadcrumb Navigation] -->
            @Html.Sitecore().Placeholder("pageHeader")
            <!-- [/Breadcrumb Navigation] -->
        </div>
    </header>

    <section class="page-header">
        <div class="container">
            <!-- [Two Columns] -->
            <div class="row">
                <div class="col-lg-4">
                    <aside>
                        @Html.Sitecore().Placeholder("pageSide")
                    </aside>
                </div>

                <div class="col-lg-8">
                    @Html.Sitecore().Placeholder("pageContent")
                </div>
            </div>
            <!-- [/Two Columns] -->
        </div>
    </section>
</main>