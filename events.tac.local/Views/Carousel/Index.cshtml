@model events.tac.local.Models.SiteCarouselModel

@if (Model.CarouselItems.Count > 0)
{
    var itemIndicatorCounter = 0;
    var itemCounter = 0;
    <div id="carousel_1" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            @foreach (var carouselItem in Model.CarouselItems)
            {
                if (!string.IsNullOrWhiteSpace(carouselItem.CarouselImage))
                {
                    var indicatorClass = "";
                    if (itemIndicatorCounter == 0)
                    {
                        indicatorClass = "active";
                    }
                    <li data-target="#carousel_1" data-slide-to="@itemIndicatorCounter" class="@indicatorClass"></li>
                    itemIndicatorCounter++;
                }
            }
        </ol>
        <div class="carousel-inner" role="listbox">
        @foreach (var carouselItem in Model.CarouselItems)
        {
            if (!string.IsNullOrWhiteSpace(carouselItem.CarouselImage))
            {
                itemCounter++;
                var itemClass = "";
                if (itemCounter == 1)
                {
                    itemClass = "active";
                }
                <div class="item @itemClass">
                    <div class="jumbotron jumbotron-xl bg-media" style="background-image: url(@carouselItem.CarouselImage)">
                        <div class="container">
                            <div class="row">
                                <div class="col-md-12">
                                    @if (!string.IsNullOrWhiteSpace(carouselItem.CarouselHeading))
                                    {
                                        <h1>
                                            @carouselItem.CarouselHeading
                                        </h1>
                                    }

                                    @if (!string.IsNullOrWhiteSpace(carouselItem.CarouselIntro))
                                    {
                                        <p class="lead">
                                            @carouselItem.CarouselIntro
                                        </p>
                                    }

                                    @if (!string.IsNullOrWhiteSpace(carouselItem.CarouselLink))
                                    {
                                        <a class="btn btn-hollow btn-lg" href="@carouselItem.CarouselLink">
                                            Read more
                                        </a>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }

        </div>
        <a class="left carousel-control" href="#carousel_1" role="button" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#carousel_1" role="button" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
}
